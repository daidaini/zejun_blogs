{
  "name": "zejun_blogs",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "next dev -p 8080",
    "dev:prod": "NODE_ENV=production next dev -p 8080",
    "dev:inspect": "NODE_OPTIONS='--inspect' next dev -p 8080",
    "build": "next build",
    "start": "next start -p 8080",
    "start:prod": "NODE_ENV=production next start -p 8080",
    "build:start": "npm run build && npm start",
    "build:analyze": "ANALYZE=true npm run build",
    "clean": "rm -rf .next out dist",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json yarn.lock",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "npm run type-check && npm run lint",
    "prepare": "husky install",
    "update:deps": "npm update",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "start:dev": "./scripts/dev.sh",
    "start:prod-full": "./scripts/prod.sh",
    "stop": "./scripts/stop.sh",
    "restart": "./scripts/restart.sh",
    "restart:prod": "./scripts/restart.sh prod",
    "clean:scripts": "./scripts/clean.sh",
    "reset": "npm run clean:all && npm install",
    "status": "./scripts/status.sh",
    "logs": "./scripts/logs.sh"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "next": "^15.4.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/node": "^22.16.5",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.4.3",
    "postcss": "^8.5.1",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
